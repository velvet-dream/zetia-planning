{% extends 'base.html.twig' %}

{% block title %}Vos projets
{% endblock %}

{# Merge with projects.html.twig #}
{% block main %}
	<h1 class="zetia-title">Vos projets</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Titre</th>
				<th>Description</th>
				<th>Date de début</th>
				<th>Date de fin prévue</th>
				<th>Date de fin effective</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for project in projects %}
				<tr>
					<td>{{ project.pctTitle }}</td>
					<td>{{ project.pctDescription }}</td>
					<td>{{ project.pctDateDebut ? project.pctDateDebut|date('Y-m-d') : '' }}</td>
					<td>{{ project.pctDateFinPrevisionnelle ? project.pctDateFinPrevisionnelle|date('Y-m-d') : '' }}</td>
					<td>{{ project.pctDateFinReelle ? project.pctDateFinReelle|date('Y-m-d') : '' }}</td>
					<td>
						<a href="{{ path('showProject', {'pctId': project.pctId}) }}">show</a>
						<a href="{{ path('editProject', {'pctId': project.pctId}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">Aucune donnée trouvée</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('addProject') }}">Créer un nouveau projet</a>
{% endblock %}
