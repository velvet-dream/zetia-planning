{% set zetiaButton %}
{% set defaultClasses = 'zetia-button zetia-button-' ~ variant ~ ' ' ~ size ~ (isBordered ? ' bordered' : '')%}
<button {{ attributes.defaults({class: defaultClasses} ) }}>
	{% block content %}
		{{ text }}
	{% endblock %}
</button>
{% endset %}

{% if href is defined %}
	<a href="{{ href }}" class="{{ size }}" role="button">{{ zetiaButton }}</a>
{% else %}
	{{ zetiaButton }}
{% endif %}
