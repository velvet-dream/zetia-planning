<html lang="FR">
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
				{% if title is defined %}
					{{ title }}
					‑ Zetia Planning{% else %}Zetia Planning
				{% endif %}
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>📝​</text></svg>">
		<link rel="stylesheet" href="{{ asset('styles/app.scss') }}">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		{% block scripts %}
			<script src="{{ asset('scripts/components/handleAlerts.ts') }}" defer></script>
		{% endblock %}
	</head>
	<body>
		<header id="top-page">
			{% block header %}
				{{ block("header", "app/header.html.twig") }}
			{% endblock %}
		</header>

		<main>
			{% block main %}{% endblock %}
		</main>

		{# Lit et affiche tous les messages flash #}
		{% for label, messages in app.flashes %}
			{% for message in messages %}
				<twig:Alert message="{{ message }}" variant="{{ label }}"/>
			{% endfor %}
		{% endfor %}
		<footer>
			{% block footer %}
				{{ block("footer", "app/footer.html.twig") }}
			{% endblock %}
		</footer>

	</body>
</html>
