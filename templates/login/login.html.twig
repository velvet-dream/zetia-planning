{% extends 'base.html.twig' %}
{% block body %}
{% if error %}
<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<form action="{{ path('security_login') }}" method="post">
    <label for="userame">{% trans %}Forename Username (or email adress){% endtrans %}:</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" />
 
    <label for="password">{% trans %}Password{% endtrans %}:</label>
    <input type="password" id="password" name="_password" />
     
    <input type="checkbox" id="remember_me" name="_remember_me" checked />
    <label for="remember_me">Se souvenir de moi</label>
     
    {# If you want to control the URL the user is redirected to on success (more details below)
    <input type="hidden" name="_target_path" value="/account" /> #}
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    <button class="btn-primary btn" type="submit">Connexion</button>
</form>
<br>
<span style="font-size:20px;">{% trans %}If you do not have an account yet, create it by clicking on the button opposite{% endtrans %}</span>
<span style="font-size: 14px;">
    <a class="btn btn-primary btn-connexion" href="{{ path('app_register') }}" role="button" data-toggle="popover" data-trigger="hover" data-placement="left" data-html="true" title="<center><u>Vous n'avez pas de compte</u></center>" data-content="<center>Cliquez pour en cr√©er un</center>">{% trans %}Register you{% endtrans %}</a>
</span>
<br>
{% endblock %}