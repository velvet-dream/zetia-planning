{# templates/register/registration.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}
    Inscription
{% endblock %}

{% block body %}
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ type }}">{{ message }}</div>
        {% endfor %}
    {% endfor %}

    <h1>Inscription</h1>

    {{ form_start(form, {'method': 'post', 'action': path('app_register')}) }}
    {{ form_row(form._token) }}
        {{ form_row(form.usr_name, {'label': 'Nom'}) }}
        {{ form_row(form.usr_first_name, {'label': 'Prénom'}) }}
        {{ form_row(form.usr_mail, {'label': 'Email'}) }}
        {{ form_row(form.usr_password, {'label': 'Mot de passe'}) }} 
        {{ form_row(form.usr_role, {'label': 'Rôle'}) }} 
        {{ form_row(form.pst_id, {'label': 'ID'}) }} 
        <button type="submit" class="btn btn-primary">S'inscrire</button>
    {{ form_end(form) }}
{% endblock %}
